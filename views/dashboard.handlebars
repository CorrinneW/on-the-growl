<div class="grid grid-flow-col grid-cols-12 mt-12 mx-auto">
    <div class="col-start-1 col-end-9 flex flex-col">
        <h2 class='text-3xl font-bold'>Welcome, {{user.name}}!</h2>
        <div class='mt-4'>
            <h3 class='text-2xl font-bold'>Your Settings:</h3>
            <div class='mt-4'>
                <form>
                    <div class='form-group'>
                        <label class='text-xl' for="species">Looking for:</label><br />
                        <select class='text-xl' id="species" name="species">
                            <option value="dogs">Dogs</option>
                            <option value="cats">Cats</option>
                        </select>
                    </div><br />
                    <div class='form-group mt-4'>
                        <label class='text-xl mt-4' for="zip">Zip Code:</label><br />
                        <input class='text-xl' id='zip' name='zip'></input>
                    </div>
                    <div class='form-group mt-4'>
                        <button class="bg-accent_light rounded p-2" id="update-settings" type="submit">Update
                            Preferences</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-start-10 col-end-12 row-span-2">
        <h3 class='text-2xl font-bold'>Your Favorites:</h3>

        {{#each user.pets}}
        <div class='rounded-md mt-8 mx-auto bg-white'>
            <img src={{image}}>
            <h2>{{user.pets.name}}</h2>
            <h3>{{user.pets.status}} at {{user.pets.contact}}</h3>
            <p>
                Breed: {{user.pets.breed}} • Age: {{user.pets.age}} • Gender: {{user.pets.gender}}
            </p>
            <p>{{user.pets.description}}</p>
        </div>
        {{/each}}
    </div>

</div>
<script src="./js/dashboard.js"></script>