<!-- Loop over each object in the projects array -->

<div class="col-md-7">
  <div class="container mx-auto">
    <div class='rounded-md mx-auto bg-white' id='petContainer'>
      <div class="container mx-auto">
        {{#each allpets}}
        <div class='rounded-md mx-auto bg-white'>
          <img src={{image}}>
          <h2>{{name}}</h2>
          <h3>{{status}} at {{organization}}</h3>
          <p>
            Breed: {{breed}} • Age: {{age}} • Gender: {{gender}}
          </p>
          <p>{{description}}</p>
        </div>
      </div>
      {{/each}}



      <p>
        <button class="bg-alert hover:bg-accent_dark text-white font-bold py-2 px-4 rounded">Remove Favorite</button>
      </p>
    </div>
  </div>
</div>
</div>

<button id='findBtn'>TEST</button>

<script src="./js/homepage.js"></script>