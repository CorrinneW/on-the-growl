<!-- Loop over each object in the projects array -->

<div class="grid grid-flow-row grid-cols-12 mt-12 mx-auto">

  <div class="bg-primary rounded p-4 col-start-5 col-end-9 flex-col flex content-center items-center" id='petContainer'>
    <!-- Slideshow container -->
    <div class='grid grid-flow-col grid-cols-6 gap-x-4 mx-auto' id="slideshow-container">
      <div class='col-span-1'>
        <button class='bg-accent_light hover:bg-accent_dark shadow p-2 rounded text-2xl'>
          <a id="dislike" aria-label='pile of poop'>&#128169;</a>
        </button>
      </div>
      <div id='petCard' class='bg-primary mx-auto col-span-4'>
        {{!-- pet image or placeholder here --}}

        <img src={{randomPet.primary_photo_cropped.small}}>
        <h2 class='text-3x font-bold'>{{randomPet.name}}</h2>
        <h3 class='text-2x font-bold'>{{randomPet.status}}, contact for more info:<br/> Email: {{randomPet.contact.email}}<br/>Phone: {{randomPet.contact.phone}}</h3>
        <p>
          Breed: {{randomPet.breed}} • Age: {{randomPet.age}} • Gender: {{randomPet.gender}}
        </p>
        <p>{{randomPet.description}}</p>
      </div>
       <div class='col-span-1'>
        <button class='bg-accent_light hover:bg-accent_dark shadow p-2 rounded text-2xl'>
          <a id="like" aria-label='sparkling heart'>&#128150;</a>
        </button>
      </div>
    </div>
  </div>

  <script src="./js/homepage.js"></script>